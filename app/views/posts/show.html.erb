<header class="top-bar">
  <img src="https://static.vecteezy.com/system/resources/thumbnails/020/765/399/small/default-profile-account-unknown-icon-black-silhouette-free-vector.jpg" alt="Profile Photo" class="circular-image">
  <% name = @user.email.match(/^(.*)@/) %>
  <p>Hi, <%= name[1] %>!</p>
</header>

<main class="content">
  <div class="carousel">
    <a href="<%= new_post_path %>" class="add-post-button">
      <div class="playing-card">+</div>
    </a>
    <% @posts.each do |post| %>
      <div class="playing-card">
        <div class="post-wrapper">
          <h2><%= link_to post.id, post_path(post) %></h2>
          <p>Description: <%= post.description %></p>
          <p>Stars: <%= post.stars %> </p>
        </div>
      </div>
    <% end %>
  </div>
</main>

<div class="bottom-bar">
  <a href="<%= root_path %>">Gallery</a>
  <a href="<%= root_path %>">Dashboards</a>
  <a href="<%= profile_path %>">Profile</a>
</div>