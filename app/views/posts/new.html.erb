<!-- app/views/posts/new.html.erb -->
<h1>Create a New Post</h1>

<%= form_with(model: @post, url: posts_path, method: :post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :media_type %>
    <%= form.select :media_type, ['game', 'movie', 'show'] %>
  </div>

  <div>
    <%= form.label :stars %>
    <%= form.number_field :stars, in: 0..5 %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit 'Create Post' %>
  </div>
<% end %>
