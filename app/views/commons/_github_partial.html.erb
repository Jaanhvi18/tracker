<section id="auth" class="github-container">
<% if user_signed_in? %>
        <div>
          <div class="guest-text">
            <p> Hello, <%= current_user.email %></p>
          </div>
          <div class="col-md-2">
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "button top-bar-btn" %>
          </div>
        </div>
      <% else %>
        <div class="acsses">
          <div class="guest-text">
            <p> Hello, Guest</p>
          </div>
          <div class="row">
            <div class="col-md-2">
            <%= link_to "Sign up", new_user_registration_path, class: "button top-bar-btn" %>
          </div>
          <div class="col-md-2">
            <%= link_to "Sign in", new_user_session_path, class: "button top-bar-btn" %>
          </div>
          <div class="col-md-2">
            <%= button_to "Sign in With Github", user_github_omniauth_authorize_path,data: {turbo: false}, class: "button top-bar-btn" %>
            </div>
        </div>
      <% end %>
</section>